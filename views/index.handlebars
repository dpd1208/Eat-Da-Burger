<div class="container-fluid">
  <div class="row">
    <h1>EAT-DA-BURGER!</h1>
  </div>
  <div class="row">
    <div class="col-6">
      <h2>YOU NEED TO EAT THESE!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block eaten=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2>YOU ALREADY ATE THESE!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block eaten=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
    <h2>WHAT BURGER DO YOU WANT NOW?!</h2>
    </div>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" burger_name="burger_name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>