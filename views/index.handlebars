<div class="jumbotron jumbotron-fluid">

  <div class="container">
    <img src="/assets/images/burger.png" style="max-width: 240px">
    <h1 class="display-4">EAT-DA-BURGER!</h1>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <h2>YOU NEED TO EAT THESE!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2>YOU ALREADY ATE THESE!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row" style="margin-top: 4em;">
    <div class="col-12" style="text-align: center;">
      <h2>WHAT BURGER DO YOU WANT NOW?!</h2>
    </div>
  </div>
  <div class="row" style="margin-top: 1em;">
    <form class="create-form"></form>
    <div class="container col-md-4 offset-md-4 form-group">

      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" burger_name="burger_name">
    </div>
    <div class="container col-md-4 offset-md-6" style="padding-left: .05em;">
      <button type="submit">Add Burger</button>
    </div>
    </form>
  </div>
</div>