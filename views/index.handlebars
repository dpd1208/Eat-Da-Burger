<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">EAT-DA-BURGER!</h1>
    <p class="lead">enter the names of your favorite burgers. click to devour them.</p>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <h2>YOU NEED TO EAT THESE!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2>YOU ALREADY ATE THESE!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12" style="text-align: center;">
      <h2>WHAT BURGER DO YOU WANT NOW?!</h2>
    </div>
  </div>
  <div class="row">
    <div class="container col-md-4 .offset-md-4" <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" burger_name="burger_name">
      </div>
      <div class="row">
        <div class="container col-md-4 .offset-md-5">
          <button type="submit">Add Burger</button>
        </div>
      </div>
      </form>
    </div>
  </div>
</div>